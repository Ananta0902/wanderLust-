<% layout("/layouts/boilerplate") %>

<div class=" col-8 offset-3">
<h2>Create New Listing</h2>
</div>
 <div class="card listing-card col-6 offset-3 ">
<form action="/listings" method="POST" novalidate enctype="multipart/form-data">
  <p class="card-text">
    <label for="title">Title</label>
    <input 
      type="text" 
      name="listing[title]" 
      id="title" 
      class="form-control"
      required
    >
  </p>

  <p class="card-text">
    <label for="description">Description</label>
    <textarea 
      name="listing[description]" 
      id="description" 
      class="form-control" 
      rows="4"
    ></textarea>
  </p>

  <p class="card-text">
    <label for="price">Price</label>
    <input 
      type="number" 
      name="listing[price]" 
      id="price" 
      class="form-control" 
      required
    >
  </p>

  <div class="row mb-3">
    <div class="col">
      <label for="location" class="form-label">Location</label>
      <input 
        type="text" 
        name="listing[location]" 
        id="location" 
        class="form-control"
      >
    </div>
    <div class="col">
      <label for="country" class="form-label">Country</label>
      <input 
        type="text" 
        name="listing[country]" 
        id="country" 
        class="form-control"
      >
    </div>
  </div>

    <p class="card-text">
    <label for="imageUrl">Upload Listing Image</label>
    <input 
      type="file" 
      name="listing[image]" 
      id="imageUrl" 
      class="form-control"
      required
    >
  </p>

  <button type="submit" class="btn add-btn">Create Listing</button>
  </div>
</form>


